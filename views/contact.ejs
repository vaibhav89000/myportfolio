              <button type="submit" class="btn btn-primary" style="margin-top: 1vw;">Submit</button>
            </form>
      </div>
  

      </div>
    </div>
    
    <!-- <div id="map"></div> -->

    <script>
      function initMap() {
        var location = {lat: 28.669155, lng: 77.453758};
        var map =new google.maps.Map(document.getElementById("map"),{
          zoom: 10,
          center: location
        });
        var marker = new google.maps.Marker({
          position: location,
          map: map
        });
      }
    </script>
      <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBy7_lgp0WMkt3W_vptmu2K_557McDVv38&callback=initMap"
