<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container">
      <div class="row">
        <div id="map" class="col-sm-6"></div>
        <div class="col-sm-6">
          <form  method="POST" style="margin-left: 10vw;" action="/home/contact/submitted">
              <div class="form-group">
                  <label for="firstname" style="color: blanchedalmond;">Firstname</label>
                  <input type="text" name="firstname" class="form-control"   placeholder="Enter firstname" style="width: 20vw; color: black;">
                  <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>
                <div class="form-group">
                  <label for="lastname" style="color: blanchedalmond;">lastname</label>
                  <input type="text" name="lastname" class="form-control" id="lastname"  placeholder="Enter lasttname" style="width: 20vw; color: black;">
                  <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>
              <div class="form-group">
                <label for="exampleInputEmail1" style="color: blanchedalmond;">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" style="width: 20vw; color: black;">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="number" style="color: blanchedalmond;">Contact details</label>
                <input type="number" name="number" class="form-control" id="number" placeholder="Contact Number" style="width: 20vw; color: black;">
              </div>
              <!-- <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
